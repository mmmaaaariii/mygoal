<style>
  .form-container {
    padding: 50px;
  }
</style>

<div class="row justify-content-center">
  <div class="col-md-5 form-container">
    <h3 class="page-header">ログイン画面</h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
      <div class="form-group">
        <p><%= f.label :email , "メールアドレス"%></p>
        <p><%= f.email_field :email, class: "form-control" %></p>
      </div>
      <div class="form-group">
        <p><%= f.label :password,"パスワード" %></p>
        <p><%= f.password_field :password, class: "form-control" %></p>
      </div>
      <div class="form-group">
        <p><%= f.submit "ログインする", class: "btn btn-primary" %></p>
      </div>
    <% end %>
  </div>
</div>