<h2>Profile Edit</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
  <label for="inputEmail">Email</label>
　<%= f.email_field :email, id:"inputEmail", placeholder:"Email"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "Profile Image", accept: "image/*" %>  
  <%= f.submit "Post" %>
<% end %>


<%= link_to "退会する", user_path(@user), method: :delete, data: {confirm: "本当にアカウントを削除しますか？"} %>

