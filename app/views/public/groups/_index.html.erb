<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>参加者数</th>
      <th colspan="3"></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% groups&.each do |group| %>
      <tr>
        <td><%= image_tag group.get_image, size: '50x50' %></td>
        <td><%= group.name %></td>
        <td><%= group.group_users.count %></td>
        <td><%= link_to '詳細', group, class: "group_#{group.id}", class: "btn btn-sm btn-info" %></td>
        <td>
          <% if group.is_owned_by?(current_user) %>
            <%= link_to '変更する', edit_group_path(group), class: "btn btn-sm btn-success" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table> 