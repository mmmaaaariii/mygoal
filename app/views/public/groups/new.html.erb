
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">新規投稿</h5>
      <div class="form-body p-4">
        <% if @group.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @group.errors.count %>件のエラーが発生しました
            </h6>
            <% @group.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: @group do |f| %>
          
          <div class="input-group mb-3 mt-4">
            <%= f.text_field :name, class: "form-control", placeholder: "name" %>
          </div>
          <%= f.text_area :introduction, class: "form-control", rows: "3", placeholder: "introduction" %>
          <%= f.file_field :group_image, accept: "image/*", class: "w-100" %>
          <hr>
          <%= f.submit 'create', class: "btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>