<h1>Posts#new</h1>

<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Content</h4>
  <%= f.text_area :content, placeholder: "今日はどうする？どうだった" %>
  <h4>Image</h4>
  <%= f.file_field :image, accept: "image/*" %>

  <%= f.submit 'POST' %>

<% end %>

