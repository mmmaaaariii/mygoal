<h2>My Page</h2>
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user == current_user %>
    <%= link_to "Profile Edit", edit_user_path(@user) %>
    <%= link_to "Withdrawal", user_path(@user), method: :delete, data: {confirm: "本当にアカウントを削除しますか？"} %>
  <% end %>
</div>

<% @posts.each do |post| %>
  <div>
    <h4><%= post.title %></h4>
    <p><%= post.content %></p>
    <%= link_to "Edit", edit_post_path(post) %>
  </div>
<% end %>